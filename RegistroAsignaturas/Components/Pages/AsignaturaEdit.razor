@page "/Asignatura/Edit/{AsignaturaId:int}"

@inject AsignaturasService asignaturasService
@inject NavigationManager navigationManager

@rendermode InteractiveServer

<h3>Editar Asignatura</h3>

@if (asignatura == null || asignatura.AsignaturaId == 0)
{
    <p>Cargando...</p>
}
else
{
    <EditForm Model="asignatura" OnValidSubmit="Modificar">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <InputText class="form-control"
                       @bind-Value="asignatura.Nombre" />
        </div>

        <div class="mb-3">
            <label class="form-label">Código</label>
            <InputText class="form-control"
                       @bind-Value="asignatura.Codigo" />
        </div>

        <div class="mb-3">
            <label class="form-label">Créditos</label>
            <InputNumber class="form-control"
                         @bind-Value="asignatura.Creditos" />
        </div>

        <div class="mb-3">
            <label class="form-label">Aula</label>
            <InputText class="form-control"
                       @bind-Value="asignatura.Aula" />
        </div>

        <!-- BOTONES -->
        <button type="button"
                class="btn btn-secondary"
                @onclick="Volver">
            Volver
        </button>

        <button type="submit" class="btn btn-primary me-2">
            Guardar
        </button>

        <button type="button"
                class="btn btn-danger me-2"
                @onclick="ConfirmarEliminar">
            Eliminar
        </button>

    </EditForm>

    @if (!string.IsNullOrEmpty(Mensaje))
    {
        <div class="alert alert-danger mt-3">
            @Mensaje
        </div>
    }

    @if (MostrarConfirmacion)
    {
        <div class="alert alert-warning mt-3">
            <p>¿Estás seguro de que deseas eliminar esta asignatura?</p>

            <button class="btn btn-danger me-2"
                    @onclick="Eliminar">
                Sí, eliminar
            </button>

            <button class="btn btn-secondary"
                    @onclick="CancelarEliminar">
                Cancelar
            </button>
        </div>
    }
}

@code {

    [Parameter]
    public int AsignaturaId { get; set; }

    public Asignaturas asignatura { get; set; } = new Asignaturas();

    public string Mensaje { get; set; } = string.Empty;

    public bool MostrarConfirmacion { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        if (AsignaturaId > 0)
        {
            var encontrado = await asignaturasService.Buscar(AsignaturaId);

            if (encontrado != null)
                asignatura = encontrado;
        }
    }

    public async Task Modificar()
    {
        try
        {
            var paso = await asignaturasService.Guardar(asignatura);

            if (paso)
                navigationManager.NavigateTo("/Asignatura/Index");
        }
        catch (Exception ex)
        {
            Mensaje = ex.Message;
        }
    }

    public void ConfirmarEliminar()
    {
        MostrarConfirmacion = true;
    }

    public void CancelarEliminar()
    {
        MostrarConfirmacion = false;
    }

    public async Task Eliminar()
    {
        var eliminado = await asignaturasService
            .Eliminar(asignatura.AsignaturaId);

        if (eliminado)
            navigationManager.NavigateTo("/Asignatura/Index");
    }

    public void Volver()
    {
        navigationManager.NavigateTo("/Asignatura/Index");
    }
}