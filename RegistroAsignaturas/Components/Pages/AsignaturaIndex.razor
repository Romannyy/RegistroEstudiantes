@page "/"
@page "/Asignatura/Index"

@inject AsignaturasService asignaturasService
@inject NavigationManager navigationManager

@rendermode InteractiveServer

<PageTitle>Registro de Asignaturas</PageTitle>

<div class="container-fluid">
    <div class="card shadow-lg">

        <!-- CABECERA -->
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
            <h5 class="card-title mb-0">Registro de Asignaturas</h5>

            <a href="/Asignatura/Create" class="btn btn-primary">
                <span class="bi bi-plus-square"></span> Crear
            </a>
        </div>

        <div class="card-body">

            <!-- FILTROS -->
            <div class="row g-2 mb-3">
                <div class="col-12 col-md-3">
                    <InputSelect class="form-select" @bind-Value="Filtro">
                        <option value="" disabled selected>Elija un filtro</option>
                        <option value="Id">ID</option>
                        <option value="Nombre">Nombre</option>
                    </InputSelect>
                </div>

                <div class="col-12 col-md-5">
                    <div class="input-group">
                        <InputText class="form-control"
                                   @bind-Value="ValorFiltro"
                                   placeholder="Buscar..." />
                        <button class="btn btn-outline-primary" @onclick="Buscar">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                    </div>
                </div>
            </div>

            <!-- TABLA -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Asignatura</th>
                            <th>Código</th>
                            <th>Créditos</th>
                            <th>Aula</th>
                            <th class="text-center">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asignatura in ListaAsignaturas)
                        {
                            <tr>
                                <td>@asignatura.AsignaturaId</td>
                                <td>@asignatura.Nombre</td>
                                <td>@asignatura.Codigo</td>
                                <td>@asignatura.Creditos</td>
                                <td>@asignatura.Aula</td>
                                <td class="text-center">
                                    <a href="/Asignatura/Edit/@asignatura.AsignaturaId"
                                       class="btn btn-sm btn-primary">
                                        Editar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- FOOTER -->
        <div class="card-footer text-end">
            <strong>Cantidad:</strong> @ListaAsignaturas.Count()
        </div>
    </div>
</div>

@code {

    public List<Asignaturas> ListaAsignaturas { get; set; } = new();

    public string Filtro { get; set; } = string.Empty;
    public string ValorFiltro { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        ListaAsignaturas =
            await asignaturasService.Listar(a => a.AsignaturaId > 0);
    }

    private async Task Buscar()
    {
        if (!string.IsNullOrWhiteSpace(ValorFiltro))
        {
            if (Filtro == "Id" && int.TryParse(ValorFiltro, out int id))
            {
                ListaAsignaturas =
                    await asignaturasService.Listar(a => a.AsignaturaId == id);
            }
            else if (Filtro == "Nombre")
            {
                ListaAsignaturas =
                    await asignaturasService.Listar(a =>
                        a.Nombre.ToLower().Contains(ValorFiltro.ToLower()));
            }
        }
        else
        {
            ListaAsignaturas =
                await asignaturasService.Listar(a => a.AsignaturaId > 0);
        }
    }
}